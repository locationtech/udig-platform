               <appInfo>
                  <meta.attribute kind="resource"/>
               </appInfo>
            </annotation>
         </attribute>
         <attribute name="id" type="string" use="required">
            <annotation>
               <documentation>
                  A unique id for tool extension
               </documentation>
            </annotation>
         </attribute>
         <attribute name="name" type="string">
